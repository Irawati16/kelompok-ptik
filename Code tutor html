    <script>
    function toggleRiwayat(element) {
        const riwayat = element.nextElementSibling;
        if (riwayat.style.display === "none" || riwayat.style.display === "") {
            riwayat.style.display = "block";
        } else {
            riwayat.style.display = "none";
        }
    }
    </script>
